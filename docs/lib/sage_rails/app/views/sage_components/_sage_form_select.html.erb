<% 
  # Temporary variable here until refactor for 'name' is complete
  label = component.label || component.name;
  selectID = label.downcase.dasherize;
%>

<div class="
  sage-select
  <%= "sage-form-field--error" if component.has_error %>
  <%= component.generated_css_classes %>"
  data-js-select="true"
  <%= component.generated_html_attributes.html_safe %>
>
  <label class="sage-select__label" for="<%= selectID %>"><%= label %></label>
  <select
    class="sage-select__field"
    name="<%= selectID %>"
    id="<%= selectID %>"
    <%= "disabled" if component.disabled %>
  >
    <% component.select_options.each do |option| %>
      <option value="<%= option[:value] %>"><%= option[:text] %></option>
    <% end %>
  </select>
  <div class="sage-select__message"><%= component.message %></div>
</div>
