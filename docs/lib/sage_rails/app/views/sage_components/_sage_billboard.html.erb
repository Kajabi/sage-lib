<% html_tag = component.title_tag ? component.title_tag : "h5" %>

<div class="sage-billboard" style="background-image: url(<%= image_url component.img %>);">
  <div class="sage-billboard__content">
    <% if component.title.present? %>
      <<%= html_tag %> class="sage-billboard__title"><%= component.title %></<%= html_tag %>>
    <% end %>
    <% if component.message.present? %>
      <p class="sage-billboard__copy"><%= component.message %></p>
    <% end %>
  </div>
</div>
