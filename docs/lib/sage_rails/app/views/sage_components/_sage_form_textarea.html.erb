<div class="sage-textarea<%= " sage-textarea--error" if component.has_error %>">
  <%# <textarea declaration needs to be on a single line. The line breaks bleeding into the <textarea> as content causing unexpected placeholder behavior %>
  <textarea class="sage-textarea__field" id="<%= component.id %>" name="<%= component.id %>" placeholder="<%= component.placeholder %>" <%= "disabled" if component.disabled -%>><%- component.content if component.content.present? -%></textarea>
  <%- if component.label_text.present? -%><label for="<%= component.id %>" class="sage-textarea__label">1<%= component.label_text -%></label><% end -%>
  <% if component.message_text.present? %>
    <div class="sage-textarea__message">
      <%= component.message_text %>
    </div>
  <% end %>
</div>
