<%
css_classes = ["sage-link", component.generated_css_classes]
html_attributes = {}
  .merge(component.attributes || {})
  .merge(component.html_attributes || {})
label = component.content

if component.label.present?
  label = if component.truncate.present?
    tag.span component.label, class: "t-sage--truncate"
  else
    component.label
  end
  label.html_safe
end

if component.help_link && component.show_label
  css_classes.append("sage-link--help")
elsif component.help_link && !component.show_label
  css_classes.append("sage-link--help-icon-only")
  label = tag.span label, class: "visually-hidden"
elsif !component.external && component.launch
  css_classes.append("sage-link--launch")
elsif component.external && component.launch
  html_attributes[:rel] = "noopener noreferrer"
  html_attributes[:target] = "_blank"
elsif component.external && !component.launch
  css_classes.append("sage-link--no-launch")
  html_attributes[:rel] = "noopener noreferrer"
  html_attributes[:target] = "_blank"
end

html_attributes[:class] = css_classes.join(" ").squish
%>
<%= link_to label, component.url, html_attributes %>
