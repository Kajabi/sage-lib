<dialog
  open
  class="
    sage-toast
    sage-toast--is-open
    <%= "sage-toast--style-danger" if component.style === "danger" %>
  "
  aria-labelledby="sage-toast-label"
  data-js-toast
>
  <output aria-live="assertive" aria-atomic="true"
    class="sage-toast__value"
    id="sage-toast-label" <%# used by: aria-labelledby %>
  >
    <%= component.value %>
  </output>
  <%= sage_component SageButton, {
    value: "close",
    style: "secondary",
    subtle: true,
    icon: {
      style: "only",
      name: "remove"
    },
    html_attributes: {
      "data-js-toast__close-trigger": ""
    }
  } %>
</dialog>
