<!DOCTYPE html>
<html lang="en">
  <head>
    <%= render "application/meta" %>
    <%= render "application/styles" %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@master/devicon.min.css">
  </head>
  <body class="sage-page sage-docs">
    <%= render "application/content_skip_link",
      link_id: "main-content"
    -%>
    <header class="sage-header">
      <%= render "application/assistant" %>
    </header>
    <%= sage_component SageStage, {} do %>
      <%= render "application/sidebar" %>
      <main class="sage-content" id="main-content">
        <div class="sage-container sage-container--lg">
          <div class="sage-row">
            <div class="sage-col--lg-7 docs-heading">
              <%= yield :heading %>
            </div>
          </div>
          <div class="sage-row">
            <div class="sage-col--lg-9">
              <hr/>
              <%= yield %>
            </div>
            <div class="sage-col--lg-3 sage-col--md-hide"><%= yield :quick_links %></div>
          </div>
        </div>
      </main>
      <div class="sage-overlay" aria-hidden="true"></div>
    <% end %>
    <%= render "scripts" %>
  </body>
</html>
