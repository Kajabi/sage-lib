<%= sage_component SagePanelRow, { grid_template: "m" } do %>
  <%= sage_component SagePanelStack, {} do %>
    <!-- Checkbox Default -->
    <%= sage_component SageSwitch, { 
      type: "checkbox",
      id: "sage-switch-1",
      name: "sage-switch-1",
      value: "switch-1-value",
      label_text: "Switch (checkbox)",
      message: ""
    } %>
    <!-- Checkbox Error -->
    <%= sage_component SageSwitch, { 
      type: "checkbox",
      id: "sage-switch-2",
      name: "sage-switch-2",
      value: "switch-2-value",
      label_text: "Switch (checkbox) with error",
      has_error: true,
      required: true,
      message: ""
    } %>
    <!-- Checkbox Disabled -->
    <%= sage_component SageSwitch, { 
      type: "checkbox",
      id: "sage-switch-3",
      name: "sage-switch-3",
      value: "switch-3-value",
      label_text: "Switch disabled",
      disabled: true,
      message: ""
    } %>
    <!-- Checkbox On & Disabled -->
    <%= sage_component SageSwitch, { 
      type: "checkbox",
      id: "sage-switch-4",
      name: "sage-switch-4",
      value: "switch-4-value",
      label_text: "Switch on disabled",
      checked: true,
      disabled: true,
      message: ""
    } %>
    <!-- Checkbox w/ Message -->
    <%= sage_component SageSwitch, { 
      type: "checkbox",
      id: "sage-switch-5",
      name: "sage-switch-5",
      value: "switch-5-value",
      label_text: "Switch (checkbox) with info",
      message: "Additional Info 1"
    } %>
    <%= sage_component SageSwitch, { 
      type: "checkbox",
      id: "sage-switch-6",
      name: "sage-switch-6",
      value: "switch-6-value",
      label_text: "Switch (checkbox) error with info",
      has_error: true,
      required: true,
      message: "Additional Info 2"
    } %>
  <% end %>
  <%= sage_component SagePanelStack, {} do %>
    <!-- Radio Default -->
    <%= sage_component SageSwitch, { 
      type: "radio",
      id: "sage-switch-7",
      name: "sage-switch-7",
      value: "switch-7-value",
      label_text: "Switch (radio)",
      checked: true,
      message: ""
    } %>
    <%= sage_component SageSwitch, { 
      type: "radio",
      id: "sage-switch-8",
      name: "sage-switch-7",
      value: "switch-8-value",
      label_text: "Switch (radio)",
      message: ""
    } %>
    <hr/>
    <!-- Radio Error -->
    <%= sage_component SageSwitch, { 
      type: "radio",
      id: "sage-switch-9",
      name: "sage-switch-9",
      value: "switch-9-value",
      label_text: "Switch (radio) error",
      has_error: true,
      required: true,
      message: ""
    } %>
    <!-- Radio Disabled -->
    <%= sage_component SageSwitch, { 
      type: "radio",
      id: "sage-switch-10",
      name: "sage-switch-10",
      value: "switch-10-value",
      label_text: "Switch (radio) disabled",
      disabled: true,
      message: ""
    } %>
    <!-- Radio On & Disabled -->
    <%= sage_component SageSwitch, { 
      type: "radio",
      id: "sage-switch-11",
      name: "sage-switch-10",
      value: "switch-11-value",
      label_text: "Switch (radio) on disabled",
      checked: true,
      disabled: true,
      message: ""
    } %>
    <!-- Hidden Label Text -->
    <%= sage_component SageSwitch, { 
      type: "checkbox",
      id: "sage-switch-12",
      name: "sage-switch-12",
      value: "switch-12-value",
      hide_text: true,
      label_text: "Switch - visually hidden text",
      message: ""
    } %>
  <% end %>
<% end %>

