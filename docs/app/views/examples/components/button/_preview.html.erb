<%
demo_configs = [
  {
    heading: "Primary (regular and disabled)",
    label: "Primary",
    style: "primary",
  },
  {
    heading: "Secondary (regular and disabled)",
    label: "Secondary",
    style: "secondary",
  },
  {
    heading: "Tertiary (regular and disabled)",
    label: "Tertiary",
    style: "tertiary",
  },
  {
    heading: "Danger (regular and disabled)",
    label: "Danger",
    style: "danger",
  }
]
%>
<% demo_configs.each do | config | %>
  <%= sage_component SageCardBlock, {} do %>
    <%= sage_component SageLabel, {
      color: "draft",
      value: config[:heading],
    } %>
  <% end %>

  <% [false, true].each do | disabled | %>
    <%= sage_component SageButtonGroup, { gap: :sm, spacer: { bottom: :sm }} do %>
      <!-- Primary button -->
      <%= sage_component SageButton, {
        value: "Button",
        style: config[:style],
        disabled: disabled
      } %>

      <!-- Primary submit button -->
      <%= sage_component SageButton, {
        value: "Submit",
        style: config[:style],
        disabled: disabled,
        attributes: {
          type: "submit"
        }
      } %>

      <!-- Primary button (link) -->
      <%= sage_component SageButton, {
        value: "Link",
        style: config[:style],
        attributes: {
          href: "#element-button"
        },
        disabled: disabled
      } %>

      <!-- Primary button (icon-left) -->
      <%= sage_component SageButton, {
        value: "Left icon",
        style: config[:style],
        icon: {
          style: "left",
          name: "menu"
        },
        disabled: disabled
      } %>

      <!-- Primary button (icon-right) -->
      <%= sage_component SageButton, {
        value: "Right icon",
        style: config[:style],
        icon: {
          style: "right",
          name: "menu"
        },
        disabled: disabled
      } %>

      <!-- Primary button (icon-only) -->
      <%= sage_component SageButton, {
        value: "Icon only",
        style: config[:style],
        icon: {
          style: "only",
          name: "menu"
        },
        disabled: disabled
      } %>

      <!-- Primary button (custom content) -->
      <%= sage_component SageButton, {
        style: config[:style],
        disabled: disabled,
        custom_content_class: 'demo-custom-class',
      } do %>
        <strong>Custom</strong> <em>content</em>
      <% end %>
    <% end %>
  <% end %>
<% end %>

