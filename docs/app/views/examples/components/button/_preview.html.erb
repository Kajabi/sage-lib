<% end %>

<%= sage_component SageCardBlock, {} do %>
  <%= sage_component SageLabel, {
    color: "draft",
    value: "Button group: Align End with top border",
  } %>
<% end %>
<%= sage_component SageButtonGroup, { gap: :md, align: "end", borderTop: true } do %>
  <%= sage_component SageButton, {
    value: "Cancel",
    style: "secondary",
  } %>
  <%= sage_component SageButton, {
    value: "Save",
