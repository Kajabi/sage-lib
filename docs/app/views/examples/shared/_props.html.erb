<% if props_content.present? %>
  <%= sage_component SageCard, {} do %>
    <div class="sage-table-wrapper sage-table-wrapper--scroll">
      <div class="sage-table-wrapper__overflow">
        <table class="sage-table sage-table--properties docs-table">
          <thead>
            <tr>
              <th>Property</th>
              <th>Description</th>
              <th>Type</th>
              <th>Default</th>
            </tr>
          </thead>
          <%= props_content %>
        </table>
      </div>
    </div>
  <% end %>
<% end %>
