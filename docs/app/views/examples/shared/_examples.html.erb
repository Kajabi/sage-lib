<h3><%= title %></h3>
<div class="sage-tabs-container">
  <%= sage_component SageTabs, {
    id: "sample-#{number}",
    items: [
      { text: "Preview", target: "sample-#{number}-preview", active: true },
      { text: "Rails", target: "sample-#{number}-rails" },
      { text: "React", target: "sample-#{number}-react" },
      { text: "HTML", target: "sample-#{number}-html" }
    ]
  } %>
  <%= sage_component SageTabsPane, { id: "sample-#{number}-preview" } do %>
    <%= yield %>
  <% end %>
  <%= sage_component SageTabsPane, { id: "sample-#{number}-rails" } do %>
    <%= md(%(
```ruby
Amazing Ruby source code coming soon!
```
    )) %>
  <% end %>
  <%= sage_component SageTabsPane, { id: "sample-#{number}-react" } do %>
    <%= md(%(
```js
Amazing React source code coming soon!
```
    )) %>
  <% end %>
  <%= sage_component SageTabsPane, { id: "sample-#{number}-html" } do %>
    <%= md("
```html
#{yield}
```
    ") %>
  <% end %>
</div>
<%= sage_component SagePanelBlock, { type_block: true } do %>
  <%= notes %>
<% end if defined?(notes) %>
