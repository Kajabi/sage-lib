<div class="colors">
  <div class="colors__block color-<%= color %>-50">
    <div class="colors__tokens">
      <div class="colors__classname-token <%= "#{SageClassnames::SPACERS::SM_BOTTOM}" %>">
        <h3>Classname Token</h3>
        <div>
          <%= sage_component SageCopyButton, {
            borderless: true,
            value: "SageClassnames::TYPE_COLORS::#{color.upcase}_50"
          } %>
        </div>
        <div>
          <%= sage_component SageCopyButton, {
            borderless: true,
            value: "SageClassnames.TYPE_COLORS.#{color.upcase}_50"
          } %>
        </div>
      </div>
      <div class="colors__hex-token"> 
        <h3>Hex Token</h3>
        <div>
          <%= sage_component SageCopyButton, {
            borderless: true,
            value: "SageTokens::COLOR_PALETTE::#{color.upcase}_50"
          } %>
        </div>
        <div>
          <%= sage_component SageCopyButton, {
            borderless: true,
            value: "SageTokens.COLOR_PALETTE.#{color.upcase}_50"
          } %>
        </div>
      </div>
    </div>
  </div>
  <% (1..9).each do |i| %>
    <div class="colors__block color-<%= color %>-<%= i %>00">
      <div class="colors__tokens">
        <div class="colors__classname-token <%= "#{SageClassnames::SPACERS::SM_BOTTOM}" %>">
          <h3>Classname Token</h3>
          <div>
            <%= sage_component SageCopyButton, {
              borderless: true,
              value: "SageClassnames::TYPE_COLORS::#{color.upcase}_#{i}00"
            } %>
          </div>
          <div>
            <%= sage_component SageCopyButton, {
              borderless: true,
              value: "SageClassnames.TYPE_COLORS.#{color.upcase}_#{i}00"
            } %>
          </div>
        </div>
        <div class="colors__hex-token"> 
          <h3>Hex Token</h3>
          <div>
            <%= sage_component SageCopyButton, {
              borderless: true,
              value: "SageTokens::COLOR_PALETTE::#{color.upcase}_#{i}00"
            } %>
          </div>
          <div>
            <%= sage_component SageCopyButton, {
              borderless: true,
              value: "SageTokens.COLOR_PALETTE.#{color.upcase}_#{i}00"
            } %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
