<%
containers = [
  {
    full_name: 'Default (Fluid/Full Width) Container',
    short_name: 'Default (Full/Fluid)',
    size: 'Fluid 100% wide',
    alias: false,
    id: 'default',
  },
  {
    full_name: 'Modal (Fluid/Full Width) Container',
    short_name: 'Modal (Full/Fluid)',
    size: 'Maximum of 500px wide',
    alias: 'modal',
    id: 'modal',
  },
  {
    full_name: 'Extra small Container',
    short_name: 'Extra Small',
    size: 'Maximum of 760px wide',
    alias: 'xs',
    id: 'xsmall',
  },
  {
    full_name: 'Small Container',
    short_name: 'Small',
    size: 'Maximum of 900px wide',
    alias: 'sm',
    id: 'small',
  },
  {
    full_name: 'Medium Container',
    short_name: 'Medium',
    size: 'Maximum of 1200px wide',
    alias: 'md',
    id: 'medium',
  },
  {
    full_name: 'Large Container',
    short_name: 'Large',
    size: 'Maximum of 1440px wide',
    alias: 'lg',
    id: 'large',
  }
]
%>

<%= content_for :heading do %>
<%= md(%(
# Containers
<p class="docs-heading__lead">Containers provide a restricted width box any sort of content can be placed within. Here we show Card object inside the containers, but containers have no intrinsic decorations.</p>
)) %>
<% end %>
<%= content_for :quick_links do %>
  <div class="quick-links">
    <h2 class="quick-links__title">Contents</h2>
    <ul class="quick-links__body">
      <% containers.each do | container | %>
        <li class="quick-links__item">
          <a href="#<%= container[:id] %>" class="quick-links__link"><%= container[:short_name] %></a>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="sage-table-wrapper">
  <div class="sage-table-wrapper__overflow">
    <table class="sage-table">
      <thead>
        <tr>
          <th></th>
          <th>sm-min <br>(545px)</th>
          <th>sm-max <br>(767px)</th>
          <th>md-max <br>(991px)</th>
          <th>lg-max <br>(1199px)</th>
          <th>xl-max <br>(1440px+)</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><code>.sage-container--modal</code></td>
          <td><b>500px</b></td>
          <td><b>500px</b></td>
          <td><b>500px</b></td>
          <td><b>500px</b></td>
          <td><b>500px</b></td>
        </tr>
        <tr>
          <td><code>.sage-container--xs</code></td>
          <td>100%</td>
          <td><b>760px</b></td>
          <td><b>760px</b></td>
          <td><b>760px</b></td>
          <td><b>760px</b></td>
        </tr>
        <tr>
          <td><code>.sage-container--sm</code></td>
          <td>100%</td>
          <td>100%</td>
          <td><b>900px</b></td>
          <td><b>900px</b></td>
          <td><b>900px</b></td>
        </tr>
        <tr>
          <td><code>.sage-container--md</code></td>
          <td>100%</td>
          <td>100%</td>
          <td>100%</td>
          <td>100%</td>
          <td><b>1200px</b></td>
        </tr>
        <tr>
          <td><code>.sage-container--lg</code></td>
          <td>100%</td>
          <td>100%</td>
          <td>100%</td>
          <td>100%</td>
          <td><b>1400px</b></td>
        </tr>
        <tr>
          <td><code>.sage-container</code></td>
          <td><b>100%</b></td>
          <td><b>100%</b></td>
          <td><b>100%</b></td>
          <td><b>100%</b></td>
          <td><b>100%</b></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<hr>
<div class="sage-type">
  <% containers.each do | container | %>
  <%= sage_component SagePanelHeader, {  title: container[:full_name], html_attributes: { id: container[:id] } } %>
  <p><%= container[:size] %></p>
  <pre class="prettyprint"><code>&lt;div class=&quot;sage-container<%= " sage-container--#{container[:alias]}" if container[:alias] %>&quot;&gt;
&lt;!-- <%= container[:size] %> --&gt;
&lt;/div&gt;</code></pre>
<hr>
<% end %>
</div>

