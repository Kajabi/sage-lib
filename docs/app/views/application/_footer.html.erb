<% footerContainer ||= false %>

<div class="docs-footer">
  <% if footerContainer %>
    <div class="sage-container sage-container--xl">
  <% end %>

  <%= sage_component SageButtonGroup, { gap: :md } do %>
    <%= sage_component SageButton, {
      value: "Version #{$SAGE_VERSION_GEM}",
      attributes: {
        href: $SAGE_RELEASE_URL,
        target: "_blank",
        rel: "noopener noreferrer",
        title: "Open SageRails gem source"
      },
      subtle: true,
      style: "secondary",
    } %>
    <%= sage_component SageButton, {
      value: "SASS Docs",
      attributes: {
        href: Rails.application.config.sassdocs_root_url,
        target: "_blank",
        rel: "noopener noreferrer",
        title: "Open Sassdocs site"
      },
      subtle: true,
      style: "secondary",
    } %>
    <%= sage_component SageButton, {
      value: "Storybook",
      attributes: {
        href: Rails.application.config.storybook_root_url,
        target: "_blank",
        rel: "noopener noreferrer",
        title: "Open Storybook React components site"
      },
      subtle: true,
      style: "secondary",
    } %>
    <%= sage_component SageButton, {
      value: "Component Status",
      attributes: {
        href: pages_status_path,
        title: "Current status of each system component"
      },
      subtle: true,
      style: "secondary",
    } %>
  <% end %>

  <% if footerContainer %>
    </div>
  <% end %>
</div>
